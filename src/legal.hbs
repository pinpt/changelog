<p
  class="mb-2 text-center md:text-left text-sm text-gray-500 links flex justify-center items-center md:justify-start flex-row divide-x divide-gray-700 space-x-2"
>
  {{#if site.theme.privacyLink}}
    <a
      class="hover:text-purple-100"
      href="{{site.theme.privacyLink}}"
    >
      Privacy Policy
    </a>
  {{/if}}
  {{#if site.theme.eulaLink}}
    <a
      class="hover:text-purple-100"
      href="{{site.theme.eulaLink}}"
    >
      EULA
    </a>
  {{/if}}
  {{#if site.theme.tosLink}}
    <a
      class="hover:text-purple-100"
      href="{{site.theme.tosLink}}"
    >
      Terms of Service
    </a>
  {{/if}}
</p>
<p class="text-center md:text-left text-sm text-gray-500 copyright">
  {{site.theme.copyright}}
</p>
<p class="text-center md:text-left text-sm text-gray-500 address">
  {{site.mailingAddress}}
</p>
<p class="text-center md:text-left poweredby">
  <a
    class="text-sm mt-6 inline-flex items-center text-gray-500 hover:text-purple-100"
    href="https://changelog.so/?utm_source=referral&utm_campaign={{site.id}}"
  >
    {{logo width="22" height="21"}}
    <span class="ml-2">Powered by Changelog</span>
  </a>
</p>