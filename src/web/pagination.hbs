<div class="pagination">

	<div class="content-wrapper">
		
		<div class="content{{#unless previousUrl}} next-only{{/unless}}">

			{{#if previousUrl}}
				<div class="previous">
					<a href="{{previousUrl}}" title="{{previousTitle}} Link">
						<span class="icon">
							{{fontawesome-icon icon="arrow-left"}}
						</span>
						{{#if previousTitle}}
							<span>{{previousTitle}}</span>
						{{/if}}
					</a>
				</div>
			{{/if}}

			{{#if nextUrl}}
				<div class="next">
					<a href="{{nextUrl}}" title="{{nextTitle}} Link">
						{{#if nextTitle}}
							<span>{{nextTitle}}</span>
						{{/if}}
						<span class="icon">
							{{fontawesome-icon icon="arrow-right"}}
						</span>
					</a>
				</div>
			{{/if}}
		
		</div>

	</div>
</div>