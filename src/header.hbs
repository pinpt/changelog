<header>
  <aside>
    <section></section>
  </aside>

  <div class="content">
    {{#if site.logoUrl}}
      <a href="{{site.theme.logoLink}}" class="logo">
        <img src="{{site.logoUrl}}" alt="" />
      </a>
    {{/if}}

    <a href="/" class="title">
      {{site.theme.title}}
    </a>

    <div
      class="description"
    >
      {{site.theme.description}}
    </div>

    <div class="subscribe">
      <a href="{{site.url}}/subscription/subscribe/{{site.id}}">
        <span class="icon">{{fontawesome-icon
            prefix="far"
            icon="envelope"
          }}</span>
        Subscribe to updates
      </a>
    </div>
  </div>
</header>